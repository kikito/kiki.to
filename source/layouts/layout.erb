<!doctype html>
<html lang="<%= site_lang %>">
  <head>
    <meta charset="utf-8">
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="<%= meta_description %>">
    <% if current_page.data.redirect_to %>
      <meta http-equiv="refresh" content="6;<%= current_page.data.redirect_to %>">
    <% end %>
    <title><%= page_title %></title>
    <%= feed_tag :atom, feed_url, title: feed_title %>
    <%= stylesheet_link_tag "style" %>
    <%= google_analytics %>
    <% if current_page.data.redirect_to %>
      <script type="text/javascript">
        settimeout(650, function() {
          window.location.href = "<%= current_page.data.redirect_to %>";
        });
      </script>
    <% end %>
  </head>

  <body class="<%= page_classes %>">

    <header class='site-header'>
      <div class="main">
        <h1 class="logo"><a href="/"><%= site_title %></a></h1>
        <nav class='site-nav'>
          <ul class='horizontal-list'>
            <li><a class='site-nav-link' href="/about">About</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <hr />

    <section class="main">
      <% if current_page.data.redirect_to %>
        <h1>Redirecting ...</h1>
        <p>This page has moved. I am attempting to redirect you to its new location now.</p>
        <p>If you don't get redirected in some seconds, please click the following link:</p>
        <ul><li><%= link_to current_page.data.redirect_to, current_page.data.redirect_to %></li></ul>
      <% else %>
        <%= yield %>
      <% end %>
    </section>
    <footer>
      <div class="main">
        <div class="left corner damped">
          <a class='social' title='legal stuff' href='/legal'><i class='icon-cc'></i> <i class='icon-cc-by'></i></a>
          &bull;
          <a class='social logo' href='/'>kiki.to</a>
        </div>
        <div class="right corner">
          <ul class='horizontal-list'>
            <li>
              <a href='https://github.com/kikito' class='social icon-github' title= 'github: kikito'></a>
            </li>
            <li>
              <a href='https://twitter.com/otikik' class='social icon-twitter' title= 'twitter: otikik'></a>
            </li>
            <li>
              <a href='http://stackoverflow.com/users/312586/kikito' class='social icon-stackoverflow' title= 'stackoverflow: kikito'></a>
            </li>
            <li>
              <a href='<%= feed_url %>' class='social icon-rss' title='<%= feed_title %>'></a>
            </li>
          </ul>
        </div>
      </div>
    </footer>
  </body>
</html>
